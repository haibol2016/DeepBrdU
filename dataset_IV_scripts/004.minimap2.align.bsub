i=$(($LSB_JOBINDEX- 1))
mkdir -p logs

module load samtools/1.16.1
module load minimap2/2.26

out=data/003.dorado_basecalled
bam=(`ls $out/*.bam`)
name=(`ls $out/*.bam | perl -p -e 's{.+/(.+?).bam}{$1}'`)
mkdir -p $out


set -euo pipefail 
minimap2 -ax map-ont -y -t 8 -B 4 -O 4,24  --sam-hit-only \
      	docs/yeast.mmi  $out/${name[$i]}.fastq |samtools view -bh  -q 60 - > $out/${name[$i]}.mapq60.bam
